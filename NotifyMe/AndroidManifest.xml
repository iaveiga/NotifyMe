<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notifyme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.example.notifyme.MainScreen"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_main_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.notifyme.Settings"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" >
        </activity>
        
        <activity
            android:name="com.example.notifyme.CreateNote"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_create_note"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.notifyme.Notes"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.notifyme.MapChooser"
            android:label="@string/title_activity_map_chooser" >
        </activity>
        <activity
            android:name="com.example.notifyme.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>